module decodificadorDisplay7Segmentos (pontos, timeBasquete, display1Time,display2Time, display1Time1, display2Time1);
	input [6:0] pontos;
	input timeBasquete;
   output [10:0] display1Time,display2Time, display1Time1, display2Time1;
	
	always @* begin
		case (pontos)
			7'b0000000 : begin
				display1Time = 11'b01110000001;
				display2Time = 11'b10110000001;
				display1Time1 = 11'b11010000001;
				display2Time1 = 11'b11100000100;
			end
			default: begin
				
			end
		endcase
	end	
endmodule